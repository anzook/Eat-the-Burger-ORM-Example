<div class="container">
<div class="jumbotron text-center">
<h1><i class="fas fa-hamburger"></i> Eat Da Burger! <i class="fas fa-hamburger"></i></h1>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Burgers to be eaten! <i class="fas fa-utensils"></i></h5>
        <p class="card-text">
          <ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-section eaten=true}}
    {{/unless}}
  {{/each}}
</ul>
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Burgers eaten! <i class="fas fa-clipboard-list"></i></h5>
        <p class="card-text">
          <ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-section eaten=false}}
    {{/if}}
  {{/each}}
</ul>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="card w-80 mx-auto">
  <div class="card-body">
    <h5 class="card-title">Add a new Burger <i class="fas fa-plus-circle"></i></h5>
    <div class="card-text">
      <form class="create-form">

  <div class="form-group">
    <label for="ca">Name:</label>
    <input class="form-control" type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label class="form-check-label" for="eaten">Already eaten?</label><br>
    <input class="form-check-input" type="radio" name="eaten" value="1" > Ate it!<br>
    <input class="form-check-input" type="radio" name="eaten" value="0" checked> Want to eat it!
  </div>

  <button class="btn btn-primary" type="submit">Add Burger</button>
</form>
    </div>
  </div>
</div>
</div>
